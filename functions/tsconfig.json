{
  "compilerOptions": {
    
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowSyntheticDefaultImports" : true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "jest.config.ts"
  ]
}
